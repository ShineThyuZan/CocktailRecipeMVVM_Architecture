<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@drawable/bg_circle_border"
        android:elevation="@dimen/_8sdp"
        android:orientation="vertical"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_30sdp"
        android:paddingEnd="@dimen/_20sdp">

    <TextView
            android:id="@+id/folderCreateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do u want to exit form the application?"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:fontFamily="@font/dmsans_regular"
            android:textSize="@dimen/_17sdp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center_horizontal"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">


        <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/dmsans_regular"
                android:text="Cancel"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="false"
                android:textColor="@color/cardview_light_background"
                app:layout_constraintBottom_toBottomOf="@+id/btnExit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnExit" />

        <Button
                android:id="@+id/btnExit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmsans_regular"
                android:text="Exit"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="false"
                android:textColor="@color/cardview_light_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>